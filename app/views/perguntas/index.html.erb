<p id="notice"><%= notice %></p>

<h1>Perguntas</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perguntas.each do |pergunta| %>
      <tr>
        <td><%= pergunta.descricao %></td>
        <td><%= link_to 'Show', pergunta %></td>
        <td><%= link_to 'Edit', edit_pergunta_path(pergunta) %></td>
        <td><%= link_to 'Destroy', pergunta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

